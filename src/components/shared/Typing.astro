---
import styles from '../../styles/typing.scss';
import { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'div'> {
  fontSize: number,
  fontWeight: number
  variant: 'gradient' | 'normal',
  size: 'sm' | 'md' | 'lg' | 'xl',
  tag: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6' | 'div'
}

const { fontWeight, fontSize, variant, size, tag: Tag = 'div', ...props } = Astro.props;
---

<Tag
  class:list={[
    styles,
    { gradient: variant === 'gradient' },
    { normal: variant === 'normal' },
    { sm: size === 'sm' },
    { md: size === 'md' },
    { lg: size === 'lg' },
    { xl: size === 'xl' },
    Astro.props.class,
  ]}
  {...props}
>
  <slot />
</Tag>
