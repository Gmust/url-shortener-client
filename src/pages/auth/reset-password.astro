---
import Layout from '../../layouts/Layout.astro';
import { ResetPassword } from '../../components/auth/ResetPassword';

const token = encodeURIComponent(Astro.url.searchParams.get('token') || '');
const email = decodeURIComponent(Astro.url.searchParams.get('email') || '');
---


<Layout>
  <ResetPassword email={email} token={token} client:load />
</Layout>
